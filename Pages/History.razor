@page "/history"
@using System.Net.Http
@using System.Net.Http.Json
@using NET_Azure_Meetup_Stajerska_website.Data
@inject HttpClient Http

<div class="container py-5">
    <main>

        @if (pastEvents == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            @foreach (var ev in pastEvents)
            {
                <section class="mb-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body p-4">
                                    <div class="row align-items-center gy-3">
                                        <div class="col-lg-8">
                                            <div class="d-flex flex-column flex-md-row align-items-center text-center text-md-start">
                                                <div class="date-badge text-white rounded-3 p-3 me-md-4 mb-3 mb-md-0 text-center">
                                                    <div class="h4 mb-0 fw-bold">@ev.Date.Day</div>
                                                    <div class="small">@ev.Date.ToString("MMM").ToUpper()</div>
                                                </div>
                                                <div>
                                                    <h3 class="h5 mb-1">@ev.Title</h3>
                                                    <p class="text-muted mb-0">
                                                        <span class="d-block d-md-inline"><i class="bi bi-clock me-1"></i> @ev.Date.ToString("HH:mm") - @ev.Date.AddHours(2.5).ToString("HH:mm") CEST</span>
                                                        <span class="d-block d-md-inline ms-md-3"><i class="bi bi-geo-alt me-1"></i>@ev.Location</span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 text-center text-lg-end">
                                            <a href="/history/@ev.Id"
                                               class="btn btn-primary btn-lg px-4">
                                                <i class="bi bi-clock-history me-2"></i>View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
        }
    </main>
</div>

@code {
    private PastEvent[]? pastEvents;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            pastEvents = await Http.GetFromJsonAsync<PastEvent[]>("Data/PastEvents.json");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading past events: {ex.Message}");
        }
    }
}
